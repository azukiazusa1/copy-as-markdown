{
  "manifest_version": 3,
  "name": "Copy as Markdown",
  "version": "0.0.1",
  "description": "ページ内の記事をマークダウン形式でコピーします",
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "scripting"
  ],
  "action": {
    "default_popup": "src/popup.html",
    "default_title": "Copy as Markdown"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}